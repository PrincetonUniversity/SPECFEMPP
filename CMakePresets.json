{
  "version": 6,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug (Serial)",
      "binaryDir": "build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "ENABLE_SIMD": "OFF",
        "Kokkos_ARCH_NATIVE": "ON",
        "Kokkos_ENABLE_AGGRESSIVE_VECTORIZATION": "ON",
        "Kokkos_ENABLE_ATOMICS_BYPASS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "targets": ["all"],
      "jobs": 8
    }
  ]
}
