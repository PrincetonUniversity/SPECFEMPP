parameters:

  header:
    ## Header information is used for logging. It is good practice to give your simulations explicit names
    title: Isotropic Elastic simulation # name for your simulation
    # A detailed description for your simulation
    description: |
      Material systems : Elastic domain (1)
      Interfaces : None
      Sources : Force source (1)
      Boundary conditions : Neumann BCs on all edges

  simulation-setup:
    ## quadrature setup
    quadrature:
      quadrature-type: GLL4

    ## Solver setup
    solver:
      time-marching:
        time-scheme:
          type: Newmark
          dt: 4e-2
          nstep: 1000

    simulation-mode:
      forward:
        writer:
          seismogram:
            format: "ascii"
            directory: "@CURRENT_BENCHMARK_BUILD_DIR@/OUTPUT_FILES/results"

  receivers:
    stations: "@CURRENT_BENCHMARK_BUILD_DIR@/DATA/STATIONS"
    angle: 0.0
    seismogram-type:
      - displacement
    nstep_between_samples: 1

  ## Runtime setup
  run-setup:
    number-of-processors: 1
    number-of-runs: 1

  ## databases
  databases:
    mesh-database: "@CURRENT_BENCHMARK_BUILD_DIR@/OUTPUT_FILES/DATABASES_MPI/proc000000_external_mesh.bin"
    mesh-parameters: "@CURRENT_BENCHMARK_BUILD_DIR@/OUTPUT_FILES/DATABASES_MPI/mesh_parameters.bin"

  ## sources
  sources: "@CURRENT_BENCHMARK_BUILD_DIR@/force.yaml"
